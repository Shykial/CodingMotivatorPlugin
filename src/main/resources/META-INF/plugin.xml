<idea-plugin>
    <id>com.github.shykial.intellijplugintest</id>
    <name>Coding motivator</name>
    <vendor>shykial</vendor>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="com.motivatemeplugin.action.MotivateMeAction"
                class="com.motivatemeplugin.action.MotivateMeAction" text="Motivate Me"
                description="Coding motivator">
            <add-to-group group-id="EditorTabsGroup" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt M"/>
        </action>
    </actions>
</idea-plugin>
